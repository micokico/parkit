<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Cabeçalho do estacionamento -->
        <TextView
            android:id="@+id/tvParkingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ParkIT A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Nome do espaço -->
        <TextView
            android:id="@+id/tvSpaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Espaço 4c"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:layout_marginBottom="16dp" />

        <!-- QR Code -->
        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_qr_code"
        android:layout_marginBottom="8dp" />

        <!-- ID único -->
        <TextView
            android:id="@+id/tvUniqueID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unique ID: CPA-0129"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Detalhes da reserva -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Hora do Check-In -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hora do Check-In:"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvCheckInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Hora do Check-Out -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Hora do Check-Out:"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvCheckOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:00"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Especificações -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Especificações:"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvSpecifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nenhuma"
                    android:textSize="14sp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Link para direções -->
        <TextView
            android:id="@+id/tvGetDirections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Directions"
            android:textSize="14sp"
            android:textColor="#1E88E5"
            android:layout_marginBottom="24dp" />

        <!-- Botão para voltar ao principal -->
        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar ao ecrã principal"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="16dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
