<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Informações do Cabeçalho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        </LinearLayout>

        <!-- Informações do Parque e Lugar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/parque" />

                <TextView
                    android:id="@+id/parkingNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Parque:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/spotIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID do Lugar:"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalCostText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custo Total:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Botão de Cancelar -->
        <Button
            android:id="@+id/btn_cancel_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/red"
            android:text="Cancelar Reserva"
            android:textColor="@android:color/white"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>


