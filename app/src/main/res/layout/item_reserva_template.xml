<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/parkingNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Parque:" />

    <TextView
        android:id="@+id/spotIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID do Lugar:" />

    <TextView
        android:id="@+id/totalCostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custo Total:" />

    <Button
        android:id="@+id/btn_cancel_reservation"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:text="Cancelar Reserva" />
</LinearLayout>
