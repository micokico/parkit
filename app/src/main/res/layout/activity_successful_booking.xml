<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Fundo semitransparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000" />

    <!-- Janela central -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="24dp"
        android:elevation="4dp"
        android:layout_margin="32dp"
        android:gravity="center">

        <!-- Ícone de sucesso -->
        <ImageView
            android:id="@+id/ivSuccessIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_check_circle"
        app:tint="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

        <!-- Mensagem de sucesso -->
        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Space Successfully Booked"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Mensagem adicional -->
        <TextView
            android:id="@+id/tvAdditionalMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifying Security Guards"
            android:textSize="16sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Indicador de carregamento -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Botão para visualizar os detalhes da reserva -->
    <Button
        android:id="@+id/btnViewBookingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Booking Details"
        android:backgroundTint="#6C757D"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="4dp" />

</RelativeLayout>
