<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Adicionar Veículo"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTipoVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="80dp"
        android:text="Tipo de Veículo"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spinnerTipoVeiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTipoVeiculo"
        android:layout_marginTop="8dp"
        android:entries="@array/tipos_veiculos"
        android:background="@android:drawable/edit_text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvNomeVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerTipoVeiculo"
        android:layout_marginTop="20dp"
        android:text="Nome do Veículo"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etNomeVeiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNomeVeiculo"
        android:layout_marginTop="8dp"
        android:hint="Ex: Tesla Model 3"
        android:background="@android:drawable/edit_text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNomeVeiculo"
        android:layout_marginTop="20dp"
        android:text="Matrícula"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etMatricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMatricula"
        android:layout_marginTop="8dp"
        android:hint="Ex: AA-12-34"
        android:background="@android:drawable/edit_text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvImagemVeiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMatricula"
        android:layout_marginTop="20dp"
        android:text="Imagem do Veículo (Opcional)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnEscolherImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvImagemVeiculo"
        android:layout_marginTop="8dp"
        android:text="Escolher Imagem"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEscolherImagem"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="230dp"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000" />
    </RelativeLayout>

</RelativeLayout>
