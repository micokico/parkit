<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF3B30">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Adicionar Carro"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Nome do Carro -->
    <TextView
        android:id="@+id/tvNomeCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="100dp"
        android:text="Nome do Carro"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etNomeCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNomeCarro"
        android:layout_marginTop="8dp"
        android:hint="Ex: Tesla Model 3"
        android:background="@android:drawable/edit_text"
        android:padding="10dp" />

    <!-- Matrícula -->
    <TextView
        android:id="@+id/tvMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etNomeCarro"
        android:layout_marginTop="20dp"
        android:text="Matrícula"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/etMatricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMatricula"
        android:layout_marginTop="8dp"
        android:hint="Ex: AA-12-34"
        android:background="@android:drawable/edit_text"
        android:padding="10dp" />

    <!-- Escolher Imagem -->
    <TextView
        android:id="@+id/tvImagemCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMatricula"
        android:layout_marginTop="20dp"
        android:text="Imagem do Carro (Opcional)"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnEscolherImagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvImagemCarro"
        android:layout_marginTop="8dp"
        android:text="Escolher Imagem"
        android:textColor="#FFFFFF"
        android:backgroundTint="#000000" />

    <!-- Botões Salvar e Cancelar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEscolherImagem"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:text="Guardar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="230dp"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#000000" />
    </RelativeLayout>

</RelativeLayout>
