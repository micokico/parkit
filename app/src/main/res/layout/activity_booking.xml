<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Menu e nome do estacionamento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!-- Ícone do menu -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu" />

            <!-- Espaço vazio para alinhar ao final -->
            <View
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Seção destacada com o nome do estacionamento e preço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_background_img"
            android:orientation="horizontal"
            android:padding="50dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvParkingName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ParkIT A"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvParkingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N200/Hr"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Texto de instrução -->
        <TextView
            android:id="@+id/tvSelectSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecione o espaço pretendido"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal" />

        <!-- Destaque com slots disponíveis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background_img"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/tvAvailableSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="5 slots Available"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Grid de slots -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="6"
                android:padding="40dp">

                <!-- Slots com imagens -->
                <ImageView
                    android:id="@+id/slot_1a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 1a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_2a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 2a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_3a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 3a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_4a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 4a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_5a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 5a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_6a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 6a"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_1b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 1b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_2b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 2b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_3b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 3b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_4b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 4b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_5b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 5b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_6b"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 6b"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_1c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 1c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_2c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 2c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_3c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 3c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_4c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/black"
                    android:contentDescription="Slot 4c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_5c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/blue"
                    android:contentDescription="Slot 5c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_6c"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 6c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_1d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 1d"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_2d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 2d"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_3d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 3d"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_4d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 4d"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_5d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 5d"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot_6d"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 6d"
                    android:src="@drawable/car" />

            </GridLayout>
        </LinearLayout>

        <!-- Alternativa para reserva futura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reserva lugar para outro momento"
                android:textSize="14sp"
                android:textColor="#555555" />

            <Switch
                android:id="@+id/switchReserveLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Botão de continuar -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
