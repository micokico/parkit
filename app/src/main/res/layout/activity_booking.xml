<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Nome do estacionamento e preço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvParkingName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ParkIT A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvParkingPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N200/Hr"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- Texto de instrução -->
        <TextView
            android:id="@+id/tvSelectSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select preferred space"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="8dp" />

        <!-- Slots de estacionamento -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvAvailableSlots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 slots Available"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Grid de slots -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:alignmentMode="alignMargins"
                android:padding="8dp">

                <!-- Slots com imagens -->
                <ImageView
                    android:id="@+id/slot8c4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 8c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot8c3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 8c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot8c2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Slot 8c"
                    android:src="@drawable/car" />

                <ImageView
                    android:id="@+id/slot3b"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/car"
                    android:contentDescription="Slot 3b"
                    android:backgroundTint="@color/green" />

                <ImageView
                    android:id="@+id/slot4c"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/car"
                    android:contentDescription="Slot 4c"
                    android:backgroundTint="@color/green" />

                <ImageView
                    android:id="@+id/slot6a"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/car"
                    android:contentDescription="Slot 6a"
                    android:backgroundTint="@color/black" />

                <ImageView
                    android:id="@+id/slot7b"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/car"
                    android:contentDescription="Slot 7b"
                    android:backgroundTint="@color/blue" />

                <ImageView
                    android:id="@+id/slot8c"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/car"
                    android:contentDescription="Slot 8c"
                    android:backgroundTint="@color/green" />
            </GridLayout>

        </LinearLayout>

        <!-- Alternativa para reserva futura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reserva lugar para outro momento"
                android:textSize="14sp"
                android:textColor="#555555" />

            <Switch
                android:id="@+id/switchReserveLater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Botão de continuar -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
